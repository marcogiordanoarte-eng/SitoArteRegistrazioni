rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Lettura pubblica dei file statici (immagini, audio, zip): mantenuta per semplicit√†
    match /{allPaths=**} {
      allow read: if true;
    }

    // Scrittura consentita solo ad utenti autenticati nelle cartelle usate dall'app
    match /{folder}/{rest=**} {
      allow write: if request.auth != null && (
        folder in [
          'artist-photo',
          'gallery',
          'album-cover',
          'album-video',
          'tracks',
          'album-zips',
          'buy',
          'musica',
          'site'
        ]
      );
    }
  }
}
