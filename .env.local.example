# Enable Firebase App Check in the client
REACT_APP_ENABLE_APPCHECK=true

# Choose provider: 'v3' (recommended to start) or 'enterprise'
REACT_APP_RECAPTCHA_PROVIDER=v3

# If provider is v3, set the site key from Firebase Console → App Check → your Web app → reCAPTCHA v3
REACT_APP_RECAPTCHA_V3_SITE_KEY=YOUR_FIREBASE_APPCHECK_RECAPTCHA_V3_SITE_KEY

# If provider is enterprise, comment the v3 key above and set the Enterprise site key
# REACT_APP_RECAPTCHA_ENTERPRISE_SITE_KEY=YOUR_RECAPTCHA_ENTERPRISE_SITE_KEY

# Dev-only: App Check debug token (two options)
# Option A: let SDK generate a token and print it in console, then add it in Firebase Console → App Check → Debug tokens
# REACT_APP_APPCHECK_DEBUG=true
# Option B: set an explicit token (also add the same token in Firebase Console → Debug tokens)
# REACT_APP_APPCHECK_DEBUG_TOKEN=YOUR_STATIC_DEBUG_TOKEN

# Optional: emulators
# REACT_APP_USE_STORAGE_EMULATOR=false
# REACT_APP_USE_FIRESTORE_EMULATOR=false
# REACT_APP_USE_FUNCTIONS_EMULATOR=false
# REACT_APP_USE_AUTH_EMULATOR=false
